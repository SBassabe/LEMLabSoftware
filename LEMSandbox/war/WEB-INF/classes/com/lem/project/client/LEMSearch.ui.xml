<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
		.important {
			font-weight: bold;
		}
		.txtAlignRight {
			text-align: right;
		}
		.gwt-Button {
			width: 100%;
		}
	    </ui:style>
    <g:DockLayoutPanel unit='EM'>    
  	    <g:north size='11'>
	        <g:HTMLPanel>
	            <center><img alt="lemlab" src="LEM_logo_2.jpg" style="margin: 12px 0px 0px 0px;"></img></center>    
	        </g:HTMLPanel>
	    </g:north>
	    <g:center>
	        <g:SplitLayoutPanel>
	            <g:west size='280'>
	               <g:HTMLPanel>
				        <table align="center">
					      <tr>       
					        <td class='{style.txtAlignRight}'>Data DA</td>
					        <td><g:TextBox ui:field='dateFromField'></g:TextBox></td>
					      </tr>
					      <tr>       
					        <td class='{style.txtAlignRight}'>Data A</td>
					        <td><g:TextBox ui:field='dateToField'></g:TextBox></td>
					      </tr>
					      <tr>       
					        <td class='{style.txtAlignRight}'>Operatore</td>
					        <td><g:TextBox ui:field='operField'></g:TextBox></td>
					      </tr>
					      <tr>       
					        <td class='{style.txtAlignRight}'>Macchina</td>
					        <td><g:TextBox ui:field='macchinaField'></g:TextBox></td>
					      </tr>
					      <tr>       
					        <td class='{style.txtAlignRight}'>Descrizione</td>
					        <td><g:TextBox ui:field='descrizioneField'></g:TextBox></td>
					      </tr>
					      <tr>
					        <td colspan='2'>
					            <center>
					                <g:Button ui:field='searchBtn' styleName='{style.gwt-Button}'>Send</g:Button>
					            </center>    
					         </td>  
					      </tr>
					      <tr>
					          <td colspan='2'><h3>Risultato Ricerca</h3></td>
					      </tr>
					      <tr>
					           <td class='{style.txtAlignRight}'>Trovati : </td>
					           <td><g:Label ui:field='trovatiField'></g:Label></td>
					      </tr>
					      <tr>
					           <td class='{style.txtAlignRight}'>Mostrati : </td>
					           <td><g:Label ui:field='mostratiField'></g:Label></td>
					      </tr>
					    </table>
					</g:HTMLPanel>     	                
	              </g:west>
	            <g:center>
	              <g:ScrollPanel>      
				    <g:HTMLPanel>  
				      <center>
					    <g:Grid ui:field='gridObj' styleName="tableStyle">
						  <g:row styleName="headerRowStyle">
						    <g:customCell styleName="hdrDataStyle">
						      <g:Label>Data</g:Label>
						    </g:customCell>
						    <g:customCell styleName="hdrStndrdStyle">
						      <g:Label>Operatore</g:Label>
						    </g:customCell>
						    <g:customCell styleName="hdrStndrdStyle">
						      <g:Label>Macchina</g:Label>
						    </g:customCell>
						    <g:customCell styleName="hdrDescrizioneStyle">
						      <g:Label>Descrizione</g:Label>
						    </g:customCell>
						  </g:row>
						 </g:Grid> 
			           </center>
			         </g:HTMLPanel>
			      </g:ScrollPanel>	         
	            </g:center>
	        </g:SplitLayoutPanel>
	    </g:center>
	    <g:south size="3">
	      <g:HTMLPanel>
	        <center>
	          <div style="color: white;">-</div>  
	          <a href="http://www.lemlab.it/?language=it">LEMLabsSoftware - Search Module </a> 
              <text>| Build: 20140120.1034</text>
            </center>
	      </g:HTMLPanel>
	    </g:south>
    </g:DockLayoutPanel>
</ui:UiBinder>